generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "linux-musl"]
  previewFeatures = ["fullTextIndex", "fullTextSearch"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  email    String @unique
  password String
  role     Roles

  @@map("users")
}

model Foods {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  calories Float

  @@fulltext([name])
  @@map("foods")
}

enum Roles {
  REGULAR
  MANAGER
  ADMIN
}
