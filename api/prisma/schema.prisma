generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "linux-musl"]
  previewFeatures = ["fullTextIndex", "fullTextSearch"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  username String     @unique
  email    String     @unique
  password String
  role     Roles
  config   UserConfig
  entries  Entry[]

  @@map("users")
}

model Entry {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  date           DateTime
  text           String
  calories       Float
  lessThanExpect Boolean  @default(false)
  user           User     @relation(fields: [userId], references: [id])
  userId         String   @db.ObjectId

  @@map("entries")
}

model Food {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  servingUnit String
  calories    Float

  @@fulltext([name, servingUnit])
  @@map("foods")
}

enum Roles {
  REGULAR
  MANAGER
  ADMIN

  @@map("roles")
}

type UserConfig {
  caloriesPerDay Float
}
